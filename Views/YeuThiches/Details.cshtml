@model HShop2024.Data.HangHoa

@{
    ViewData["Title"] = "Chi Tiết Sản Phẩm";
}

<h1>@Model.TenHh</h1>
<p>Giá: @Model.DonGia</p>
<p>Mô Tả: @Model.MoTa</p>

<!-- Form to add product to favorites -->
<form asp-action="AddToFavorites" method="post">
    @* Hidden fields to store product and customer details *@
    <input type="hidden" name="MaHh" value="@Model.MaHh" />
    <input type="hidden" name="MaKh" value="@User.Identity.Name" /> <!-- Assuming MaKh is the user's ID or email -->
    <input type="hidden" name="NgayChon" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
    <input type="hidden" name="MoTa" value="Thêm mô tả tùy chọn" />

    <button type="submit" class="btn btn-primary">Thêm vào Danh Sách Yêu Thích</button>
</form>
