@model HShop2024.ViewModels.LoginVM

@{
    ViewData["Title"] = "Đăng nhập";
}
<div class="container py-5">
    <h1 class="mb-4">Đăng nhập</h1>

    <div class="row">
        <!-- Form Đăng Nhập Khách Hàng -->
        <div class="col-md-6">
            <h2>Khách Hàng</h2>
            <form asp-action="DangNhap" method="post">
                <div class="text-danger" asp-validation-summary="All"></div>
                <div class="form-group">
                    <label asp-for="MaKh" class="form-label"></label>
                    <input asp-for="MaKh" class="form-control" />
                    <span asp-validation-for="MaKh" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MatKhau" class="form-label"></label>
                    <input asp-for="MatKhau" type="password" class="form-control" />
                    <span asp-validation-for="MatKhau" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary mt-3">Đăng nhập</button>
                <input type="hidden" name="ReturnUrl" value="@ViewBag.ReturnUrl" />
            </form>
        </div>

        <!-- Button Chuyển Hướng Đến Đăng Nhập Nhân Viên -->
        <div class="col-md-6 d-flex align-items-center">
            <a class="btn btn-secondary" asp-controller="NhanVien" asp-action="DangNhap">Đăng nhập nhân viên</a>
        </div>
    </div>
</div>
