@model HShop2024.Data.HangHoa

@{
    ViewData["Title"] = "Chi tiết hàng hóa";
    Layout = "_Layout2";
}

<h1>Chi tiết hàng hóa</h1>

<div>
    <h2>@Model.TenHh</h2>
    <dl class="row">
        <dt class="col-sm-2">Mã hàng hóa</dt>
        <dd class="col-sm-10">@Model.MaHh</dd>

        <dt class="col-sm-2">Tên hàng hóa</dt>
        <dd class="col-sm-10">@Model.TenHh</dd>

        <dt class="col-sm-2">Tên alias</dt>
        <dd class="col-sm-10">@Model.TenAlias</dd>

        <dt class="col-sm-2">Danh mục</dt>
        <dd class="col-sm-10">@Model.MaLoai</dd>

        <dt class="col-sm-2">Mô tả đơn vị</dt>
        <dd class="col-sm-10">@Model.MoTaDonVi</dd>

        <dt class="col-sm-2">Giá</dt>
        <dd class="col-sm-10">@Model.DonGia</dd>

        <dt class="col-sm-2">Hình ảnh</dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.Hinh))
            {
                <img src="@Model.Hinh" alt="Hình ảnh hàng hóa" style="max-width: 200px; max-height: 200px;" />
            }
            else
            {
            }
        </dd>

        <dt class="col-sm-2">Ngày sản xuất</dt>
        <dd class="col-sm-10">@Model.NgaySx.ToString("dd/MM/yyyy")</dd>

        <dt class="col-sm-2">Giảm giá</dt>
        <dd class="col-sm-10">@Model.GiamGia%</dd>

        <dt class="col-sm-2">Số lần xem</dt>
        <dd class="col-sm-10">@Model.SoLanXem</dd>

        <dt class="col-sm-2">Mô tả</dt>
        <dd class="col-sm-10">@Model.MoTa</dd>

        <dt class="col-sm-2">Nhà cung cấp</dt>
        <dd class="col-sm-10">@Model.MaNcc</dd>
    </dl>
</div>

<p>
    <a asp-action="Edit" asp-route-id="@Model.MaHh" class="btn btn-primary">Sửa</a>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</p>
