@model HShop2024.Data.HangHoa

@{
    ViewData["Title"] = "Chi tiết hàng hóa";
    Layout = "_Layout2";
}

<div class="container mt-4">
    <h2 class="text-primary mb-4">@ViewData["Title"]</h2>

    <div class="card shadow-sm p-4 mb-4 bg-white rounded">
        <h3 class="text-info">@Model.TenHh</h3>

        <div class="row">
            <div class="col-md-4">
                <div class="text-center">
                    @if (!string.IsNullOrEmpty(Model.Hinh))
                    {
                        <img src="@Url.Content("~/Hinh/HangHoa/" + Model.Hinh)" alt="Hình ảnh hàng hóa" class="img-fluid img-thumbnail" style="max-width: 100%; height: auto;">
                    }
                    else
                    {
                        <p class="text-muted">Không có hình ảnh</p>
                    }
                </div>
            </div>
            <div class="col-md-8">
                <dl class="row">
                    <dt class="col-sm-4">Mã hàng hóa</dt>
                    <dd class="col-sm-8">@Model.MaHh</dd>

                    <dt class="col-sm-4">Tên hàng hóa</dt>
                    <dd class="col-sm-8">@Model.TenHh</dd>

                    <dt class="col-sm-4">Tên alias</dt>
                    <dd class="col-sm-8">@Model.TenAlias</dd>

                    <dt class="col-sm-4">Danh mục</dt>
                    <dd class="col-sm-8">@Model.MaLoai</dd>

                    <dt class="col-sm-4">Mô tả đơn vị</dt>
                    <dd class="col-sm-8">@Model.MoTaDonVi</dd>

                    <dt class="col-sm-4">Giá</dt>
                    <dd class="col-sm-8">
                        <i class="fas fa-dollar-sign"></i> @Model.DonGia
                    </dd>

                    <dt class="col-sm-4">Ngày sản xuất</dt>
                    <dd class="col-sm-8">@Model.NgaySx.ToString("dd/MM/yyyy")</dd>

                    <dt class="col-sm-4">Giảm giá</dt>
                    <dd class="col-sm-8">@Model.GiamGia%</dd>

                    <dt class="col-sm-4">Mô tả</dt>
                    <dd class="col-sm-8">@Model.MoTa</dd>

                    <dt class="col-sm-4">Nhà cung cấp</dt>
                    <dd class="col-sm-8">@Model.MaNcc</dd>
                </dl>
            </div>
        </div>
    </div>

    <div class="d-flex justify-content-between mt-3">
        <a asp-action="Edit" asp-route-id="@Model.MaHh" class="btn btn-warning">
            <i class="bi bi-pencil"></i> Sửa
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left-circle"></i> Quay lại
        </a>
    </div>
</div>
