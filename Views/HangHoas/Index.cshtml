
@model IEnumerable<HShop2024.Data.HangHoa>

@{
    ViewData["Title"] = "Danh sách hàng hóa";
    Layout = "_Layout2";
}
<style>
    td {
        word-wrap: break-word;
        overflow-wrap: break-word;
    }
</style>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <link href="~/css/site.css" rel="stylesheet">
</head>

<div class="container mt-4">
    <h2 class="mb-4 text-primary">@ViewData["Title"]</h2>

    <form method="get" asp-action="Index" class="d-flex align-items-center mb-4">
        <div class="d-flex align-items-center me-4">
            <!-- Button Thêm mới (căn bên trái) -->
            <a asp-action="Create" class="btn btn-success d-flex align-items-center rounded-pill shadow-sm px-4 py-2 text-white" style="background-color: #28a745; transition: background-color 0.3s ease;">
                <i class="bi bi-plus-circle-fill me-2"></i> Thêm mới
            </a>
        </div>
        <div class="d-flex align-items-center w-100">
            <button type="submit" class="btn btn-primary rounded-pill shadow-sm">
                <i class="bi bi-search"></i> Tìm kiếm
            </button>
            <input type="text" name="searchString" class="form-control me-2 rounded-pill border-0 shadow-sm" placeholder="Tìm kiếm..." value="@ViewData["SearchString"]" />
        </div>
    </form>
    <div class="table-responsive shadow-sm rounded">
        <table class="table table-hover align-middle table-striped">
            <thead class="table-dark">
                <tr>
                    <th scope="col">Hình ảnh</th>
                    <th scope="col">Mã hàng hóa</th>
                    <th scope="col">Tên hàng hóa</th>
                    <th scope="col">Mã loại</th>
                    <th scope="col">Nhà cung cấp</th>
                    <th scope="col">Giá</th>
                    <th scope="col">Ngày sản xuất</th>
                    <th scope="col" colspan="3" class="text-center">Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <img src="@Url.Content("~/Hinh/HangHoa/" + item.Hinh)" alt="Hình ảnh @item.TenHh" class="img-fluid img-thumbnail rounded" style="max-width: 100px; height: auto;">
                        </td>
                        <td>@item.MaHh</td>
                        <td>@item.TenHh</td>
                        <td>@item.MaLoai</td>
                        <td>@item.MaNcc</td>
                        <td>
                            <i class="fas fa-dollar-sign"></i> @item.DonGia
                        </td>
                        <td>@item.NgaySx.ToString("dd/MM/yyyy")</td>
                        <td class="text-center">
                            <a asp-action="Details" asp-route-id="@item.MaHh" class="btn btn-outline-info btn-sm" data-bs-toggle="tooltip" title="Xem chi tiết">
                                <i class="bi bi-info-circle"></i>
                            </a>
                        </td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@item.MaHh" class="btn btn-outline-warning btn-sm" data-bs-toggle="tooltip" title="Sửa thông tin">
                                <i class="bi bi-pencil"></i>
                            </a>
                        </td>
                        <td class="text-center">
                            <a asp-action="Delete" asp-route-id="@item.MaHh" class="btn btn-outline-danger btn-sm" data-bs-toggle="tooltip" title="Xóa hàng hóa">
                                <i class="bi bi-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        $(function () {
            $('[data-bs-toggle="tooltip"]').tooltip();
        });
    </script>
}