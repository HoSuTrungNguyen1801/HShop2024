@model IEnumerable<HShop2024.Data.HangHoa>

@{
    ViewData["Title"] = "Danh sách hàng hóa";
    Layout = "_Layout2";
}

<h1>Danh sách hàng hóa</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Thêm mới</a>
</p>

<div class="table-responsive">
    <table class="table table-striped table-bordered w-100">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Mã hàng hóa</th>
                <th scope="col">Tên hàng hóa</th>
                <th scope="col">Danh mục</th>
                <th scope="col">Nhà cung cấp</th>
                <th scope="col">Giá</th>
                <th scope="col">Ngày sản xuất</th>
                <th scope="col">Chi tiết</th>
                <th scope="col">Sửa</th>
                <th scope="col">Xóa</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.MaHh</td>
                    <td>@item.TenHh</td>
                    <td>@item.MaLoai</td>
                    <td>@item.MaNcc</td>
                    <td>@item.DonGia</td>
                    <td>@item.NgaySx.ToString("dd/MM/yyyy")</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.MaHh" class="btn btn-info btn-sm">Chi tiết</a>
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.MaHh" class="btn btn-warning btn-sm">Sửa</a>
                    </td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@item.MaHh" class="btn btn-danger btn-sm">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    .table {
        width: 100%;
        table-layout: auto;
    }

    th, td {
        text-align: left;
        padding: 8px;
    }

    .btn {
        min-width: 75px;
    }

    .btn-sm {
        padding: 5px 10px;
        font-size: 14px;
    }

    .table-responsive {
        overflow-x: auto;
    }
</style>
