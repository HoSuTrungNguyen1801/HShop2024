@model IEnumerable<HShop2024.Data.HangHoa>

@{
    ViewData["Title"] = "Danh sách hàng hóa";
    Layout = "_Layout2";
}
<div class="container mt-4">
    <h2 class="mb-4 text-primary">@ViewData["Title"]</h2>

    <form method="get" asp-action="Index" class="d-flex align-items-center mb-4">
        <div class="d-flex align-items-center me-4">
            <!-- Button Thêm mới (căn bên trái) -->
            <a asp-action="Create"
                class="btn btn-success d-flex align-items-center rounded-pill shadow-sm px-4 py-2 text-white"
                style="background-color: #28a745; transition: background-color 0.3s ease;">
                <i class="bi bi-plus-circle-fill me-2"></i> Thêm mới
            </a>
        </div>
        <div class="d-flex align-items-center w-100">
            <button type="submit" class="btn btn-primary rounded-pill shadow-sm">
                <i class="bi bi-search"></i> Tìm kiếm
            </button>
            <input type="text" name="searchString" class="form-control me-2 rounded-pill border-0 shadow-sm"
                placeholder="Tìm kiếm..." value="@ViewData["SearchString"]" />
        </div>
    </form>
    <div class="table-responsive shadow-sm rounded">
        <table class="table table-hover align-middle table-striped">
            <thead class="table-dark">
                <tr>
                    <th scope="col">Hình ảnh</th>
                    <th scope="col">Mã hàng hóa</th>
                    <th scope="col">Tên hàng hóa</th>
                    <th scope="col">Mã loại</th>
                    <th scope="col">Nhà cung cấp</th>
                    <th scope="col">Giá</th>
                    <th scope="col">Ngày sản xuất</th>
                    <th scope="col" colspan="3" class="text-center">Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <!-- Hình ảnh hàng hóa -->
                        <td>
                            <img src="@Url.Content("~/Hinh/HangHoa/" + item.Hinh)" alt="Hình ảnh @item.TenHh"
                                 class="img-fluid img-thumbnail rounded shadow-sm" style="max-width: 100px; height: auto;">
                        </td>

                        <!-- Mã hàng hóa -->
                        <td>@item.MaHh</td>

                        <!-- Tên hàng hóa -->
                        <td>@item.TenHh</td>

                        <!-- Mã loại -->
                        <td>@item.MaLoai</td>

                        <!-- Nhà cung cấp -->
                        <td>@item.MaNcc</td>

                        <!-- Giá hàng hóa -->
                        <td>
                            <i class="fas fa-dollar-sign text-success"></i> @item.DonGia
                        </td>

                        <!-- Ngày sản xuất -->
                        <td>@item.NgaySx.ToString("dd/MM/yyyy")</td>

                        <!-- Hành động -->
                        <td class="text-center">
                            <!-- Nút xem chi tiết -->
                            <a asp-action="Details" asp-route-id="@item.MaHh" class="btn btn-outline-info btn-sm rounded"
                               data-bs-toggle="tooltip" data-placement="top" title="Xem chi tiết">
                                <i class="fas fa-info-circle"></i>
                            </a>
                        </td>

                        <td class="text-center">
                            <!-- Nút sửa thông tin -->
                            <a asp-action="Edit" asp-route-id="@item.MaHh" class="btn btn-outline-warning btn-sm rounded"
                               data-bs-toggle="tooltip" data-placement="top" title="Sửa thông tin">
                                <i class="fas fa-edit"></i>
                            </a>
                        </td>

                        <td class="text-center">
                            <!-- Nút xóa hàng hóa -->
                            <a asp-action="Delete" asp-route-id="@item.MaHh" class="btn btn-outline-danger btn-sm rounded"
                               data-bs-toggle="tooltip" data-placement="top" title="Xóa hàng hóa">
                                <i class="fas fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        $(function () {
            $('[data-bs-toggle="tooltip"]').tooltip();
        });
    </script>
}