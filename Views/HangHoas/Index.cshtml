@model IEnumerable<HShop2024.Data.HangHoa>

@{
    ViewData["Title"] = "Danh sách hàng hóa";
    Layout = "_Layout2";
}

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <link href="~/css/site.css" rel="stylesheet">
</head>

<div class="container mt-4">
    <h1>@ViewData["Title"]</h1>

    <p>
        <a asp-action="Create" class="btn btn-primary">Thêm mới</a>
    </p>

    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Hình ảnh</th>
                    <th scope="col">Mã hàng hóa</th>
                    <th scope="col">Tên hàng hóa</th>
                    <th scope="col">Mã loại</th>
                    <th scope="col">Nhà cung cấp</th>
                    <th scope="col">Giá</th>
                    <th scope="col">Ngày sản xuất</th>
                    <th scope="col">Thông tin</th>
                    <th scope="col">Sửa</th>
                    <th scope="col">Xóa</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <img src="@Url.Content("~/Hinh/HangHoa/" + item.Hinh)" alt="Hình ảnh @item.TenHh" class="img-thumbnail">
                        </td>
                        <td>@item.MaHh</td>
                        <td>@item.TenHh</td>
                        <td>@item.MaLoai</td>
                        <td>@item.MaNcc</td>
                        <td>
                            <i class="fas fa-dollar-sign"></i> @item.DonGia
                        </td>
                        <td>@item.NgaySx.ToString("dd/MM/yyyy")</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.MaHh" class="btn btn-info btn-sm">
                                <i class="bi bi-info-circle"></i>
                            </a>
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.MaHh" class="btn btn-warning btn-sm">
                                <i class="bi bi-pencil"></i>
                            </a>
                        </td>
                        <td>
                            <a asp-action="Delete" asp-route-id="@item.MaHh" class="btn btn-danger btn-sm">
                                <i class="bi bi-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>
