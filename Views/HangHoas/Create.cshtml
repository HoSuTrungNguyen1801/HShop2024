@model HShop2024.ViewModels.HangHoaVM

@{
    ViewData["Title"] = "Thêm Hàng Hóa Mới";
    // Layout = "_Layout2";
}

<h2>@ViewData["Title"]</h2>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <ul>
            @foreach (var modelState in ViewData.ModelState.Values)
            {
                foreach (var error in modelState.Errors)
                {
                    <li>@error.ErrorMessage</li>
                }
            }
        </ul>
    </div>
}

<form asp-action="Create" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="TenHh" class="control-label"></label>
        <input asp-for="TenHh" class="form-control" />
        <span asp-validation-for="TenHh" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TenAlias" class="control-label"></label>
        <input asp-for="TenAlias" class="form-control" />
        <span asp-validation-for="TenAlias" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MaLoai" class="control-label"></label>
        <input asp-for="MaLoai" class="form-control" />
        <span asp-validation-for="MaLoai" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MoTaDonVi" class="control-label"></label>
        <textarea asp-for="MoTaDonVi" class="form-control"></textarea>
        <span asp-validation-for="MoTaDonVi" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DonGia" class="control-label"></label>
        <input asp-for="DonGia" class="form-control" />
        <span asp-validation-for="DonGia" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Hinh" class="control-label"></label>
        <input type="file" name="Hinh" class="form-control" />
        <span asp-validation-for="Hinh" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="NgaySx" class="control-label"></label>
        <input asp-for="NgaySx" class="form-control" type="date" />
        <span asp-validation-for="NgaySx" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="GiamGia" class="control-label"></label>
        <input asp-for="GiamGia" class="form-control" />
        <span asp-validation-for="GiamGia" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MaNcc" class="control-label"></label>
        <input asp-for="MaNcc" class="form-control" />
        <span asp-validation-for="MaNcc" class="text-danger"></span>
    </div>

    <div class="form-group form-check">
        <label class="form-check-label">
            <input class="form-check-input" asp-for="IsOrganic" /> @Html.DisplayNameFor(model => model.IsOrganic)
        </label>
    </div>

    <div class="form-group form-check">
        <label class="form-check-label">
            <input class="form-check-input" asp-for="IsFantastic" /> @Html.DisplayNameFor(model => model.IsFantastic)
        </label>
    </div>
    <div>
        <label for="TenLoai">Tên Loại</label>
        <input asp-for="TenLoai" class="form-control" />
        <span asp-validation-for="TenLoai" class="text-danger"></span>
    </div>

    <div>
        <label for="MoTaNgan">Mô Tả Ngắn</label>
        <textarea asp-for="MoTaNgan" class="form-control"></textarea>
        <span asp-validation-for="MoTaNgan" class="text-danger"></span>
    </div>

    <div>
        <label for="MaLoai">Mã Loại</label>
        <select asp-for="MaLoai" asp-items="Model.MaLoaiOptions" class="form-control"></select>
        <span asp-validation-for="MaLoai" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SoLuong" class="control-label">Số Lượng</label>
        <input asp-for="SoLuong" class="form-control" />
        <span asp-validation-for="SoLuong" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Thêm mới" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index">Quay lại danh sách</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}