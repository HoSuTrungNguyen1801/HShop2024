@model HShop2024.Data.KhachHang

@{
    ViewData["Title"] = "Xóa khách hàng";
    Layout = "_Layout2"; // Sử dụng layout của bạn
}

<h1>@ViewData["Title"]</h1>
<hr>

<h3>Bạn có chắc chắn muốn xóa khách hàng này không?</h3>

<div>
    <h4>Thông tin khách hàng</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Mã KH
        </dt>
        <dd class="col-sm-10">
            @Model.MaKh
        </dd>
        <dt class="col-sm-2">
            Họ Tên
        </dt>
        <dd class="col-sm-10">
            @Model.HoTen
        </dd>
        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Model.Email
        </dd>
        <dt class="col-sm-2">
            Trạng Thái
        </dt>
        <dd class="col-sm-10">
            @(Model.HieuLuc ? "Còn hiệu lực" : "Bị khóa")
        </dd>
    </dl>

    <!-- Form xác nhận xóa -->
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="MaKh" />
        <button type="submit" class="btn btn-danger">Xóa</button>
        <a href="@Url.Action("Index", "Admin")" class="btn btn-secondary">Hủy</a>
    </form>
</div>
