@model IEnumerable<HShop2024.Data.KhachHang>

@{
    ViewData["Title"] = "Danh sách khách hàng";
    Layout = "_Layout2";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    @* <link rel="stylesheet" href="~/css/site.css"> *@
    <style>
        .img-thumbnail-custom {
            width: 100px; /* Đặt chiều rộng cho ảnh */
            height: 100px; /* Đặt chiều cao cho ảnh */
            object-fit: cover; /* Đảm bảo ảnh không bị kéo dãn và vẫn giữ tỷ lệ */
            border-radius: 5px; /* Để ảnh có các góc bo tròn nếu cần */
        }

    </style>
</head>
<body>
    <div class="container mt-4">
        <h1 class="mb-4">@ViewData["Title"]</h1>
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Số TT</th>
                        <th scope="col">Ảnh khách hàng</th>
                        <th scope="col">Mã KH</th>
                        <th scope="col">Họ Tên</th>
                        <th scope="col">Email</th>
                        <th scope="col">Hiệu lực</th>
                        <th scope="col">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var kh in Model.Select((value, index) => new { value, index }))
                    {
                        <tr>
                            <td>@(kh.index + 1)</td>
                            <td>
                                @if (!string.IsNullOrEmpty(kh.value.Hinh))
                                {
                                    <img src="@Url.Content("~/Hinh/KhachHang/" + kh.value.Hinh)" alt="Hình ảnh @kh.value.HoTen" class="img-thumbnail-custom">
                                }
                                else
                                {
                                    <img src="@Url.Content("~/Hinh/KhachHang/android_300200.png")" alt="Hình ảnh mặc định" class="img-thumbnail-custom">
                                }
                            </td>
                            <td>@kh.value.MaKh</td>
                            <td>@kh.value.HoTen</td>
                            <td>@kh.value.Email</td>
                            <td class="@(kh.value.HieuLuc ? "status-active" : "status-inactive")">
                                @(kh.value.HieuLuc ? "Còn hiệu lực" : "Bị khóa")
                            </td>
                            <td>
                                <a href="@Url.Action("Edit", "Admin", new { id = kh.value.MaKh })" class="btn btn-warning btn-sm">
                                    <i class="fas fa-edit"></i> Sửa
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/js/all.min.js"></script>
</body>
</html>
