@model IEnumerable<HShop2024.Data.KhachHang>

@{
    ViewData["Title"] = "Danh sách khách hàng";
    Layout = "_Layout2";
}
<style>
    .table {
        width: 100%;
        table-layout: auto;
    }

    th, td {
        text-align: left;
        padding: 12px;
        vertical-align: middle;
    }

    th {
        background-color: #343a40;
        color: white;
    }

    .btn {
        min-width: 75px;
    }

    .btn-sm {
        padding: 5px 10px;
        font-size: 14px;
    }

    .table-responsive {
        overflow-x: auto;
    }
</style>
<div class="container mt-4">
    <h1 class="mb-4">@ViewData["Title"]</h1>

    <div class="table-responsive">
        <table class="table table-striped table-bordered w-100">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Số TT</th>
                    <th scope="col">Mã KH</th>
                    <th scope="col">Họ Tên</th>
                    <th scope="col">Email</th>
                    <th scope="col">Hiệu lực</th>
                    <th scope="col">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var kh in Model.Select((value, index) => new { value, index }))
                {
                    <tr>
                        <td>@(kh.index + 1)</td>
                        <td>@kh.value.MaKh</td>
                        <td>@kh.value.HoTen</td>
                        <td>@kh.value.Email</td>
                        <td>@(kh.value.HieuLuc ? "Còn hiệu lực" : "Bị khóa")</td>
                        <td>
                            <a href="@Url.Action("Edit", "Admin", new { id = kh.value.MaKh })" class="btn btn-warning btn-sm">Sửa</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
