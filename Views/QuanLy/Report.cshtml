@model dynamic
@{
    ViewData["Title"] = "Báo cáo";
    Layout = "_Layout2";
    // Thiết lập vùng văn hóa để hiển thị ký hiệu đô la
    var cultureInfo = new System.Globalization.CultureInfo("en-US");
    System.Threading.Thread.CurrentThread.CurrentCulture = cultureInfo;
    System.Threading.Thread.CurrentThread.CurrentUICulture = cultureInfo;
}

<style>
    .btn-custom {
        background-color: #007bff;
        border-color: #007bff;
        font-size: 0.8rem;
        padding: 0.5rem 1rem;
        color: #f1c40f;
        text-decoration: none;
    }

        .btn-custom:hover {
            background-color: #0056b3;
            border-color: #004085;
            color: #f1c40f;
        }

        .btn-custom .fas {
            margin-right: 0.5rem;
        }
</style>

<div class="container mt-4">
    <h1>@ViewData["Title"]</h1>
    <a href="@Url.Action("Index", "QuanLy")" class="btn btn-custom mb-4">
        <i class="fas fa-arrow-left"></i> Quay lại
    </a>

    <div class="card mt-4">
        <div class="card-header">
            <h4>Báo cáo sản phẩm bán chạy tuần này </h4>
        </div>
        <div class="card-body">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Tên Sản Phẩm</th>
                        <th>Số Lượng Bán</th>
                        <th>Doanh Thu</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.BestSellingProductsReport.BestSellingProducts)
                    {
                        <tr>
                            <td>@item.ProductName</td>
                            <td>@item.SalesCount</td>
                            <td>@item.TotalRevenue.ToString("C", cultureInfo)</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
