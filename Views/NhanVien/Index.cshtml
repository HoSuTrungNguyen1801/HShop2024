@model IEnumerable<HShop2024.Data.NhanVien>
@{
    ViewData["Title"] = "Danh sách nhân viên";
    Layout = "_Layout2";
}
<style>
    .table {
        width: 100%;
        table-layout: auto;
    }

    th, td {
        text-align: left;
        padding: 12px;
        vertical-align: middle;
    }

    th {
        background-color: #343a40;
        color: white;
    }

    .btn {
        min-width: 75px;
    }

    .btn-sm {
        padding: 5px 10px;
        font-size: 14px;
    }

    .table-responsive {
        overflow-x: auto;
    }
</style>
<div class="container mt-4">
    <h1 class="mb-4">@ViewData["Title"]</h1>

    <p>
        <a href="@Url.Action("Create", "NhanVien")" class="btn btn-primary">Thêm nhân viên mới</a>
    </p>

    <div class="table-responsive">
        <table class="table table-striped table-bordered w-100">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Mã Nhân Viên</th>
                    <th scope="col">Họ Tên</th>
                    <th scope="col">Email</th>
                    <th scope="col">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var nv in Model)
                {
                    <tr>
                        <td>@nv.MaNv</td>
                        <td>@nv.HoTen</td>
                        <td>@nv.Email</td>
                        <td>
                            <a href="@Url.Action("Edit", "NhanVien", new { id = nv.MaNv })" class="btn btn-warning btn-sm">Sửa</a>
                            <a href="@Url.Action("Delete", "NhanVien", new { id = nv.MaNv })" class="btn btn-danger btn-sm">Xóa</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
