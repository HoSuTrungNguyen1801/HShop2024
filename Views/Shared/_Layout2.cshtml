@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Admin Dashboard</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link href="~/css/site.css" rel="stylesheet" />
    <style>
        .last-login {
            margin-top: 14px;
            padding: 9px;
            border: 1px solid #007bff; /* Đường viền màu xanh */
            border-radius: 2px; /* Góc bo tròn */
            background-color: #f0f8ff; /* Màu nền nhẹ */
            display: flex; /* Sử dụng flexbox để căn chỉnh nội dung */
            align-items: center; /* Căn giữa dọc */
        }

        .last-login-text {
            font-weight: bold; /* Làm cho nhãn đậm */
            color: #007bff; /* Màu chữ nhãn xanh */
            font-size:14px;
            margin-right: 5px; /* Khoảng cách giữa nhãn và giá trị */
            font-style: italic; /* Thêm kiểu chữ nghiêng */
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <a class="highlighted"><i class="fas fa-store"></i> HSHOP 2023</a>
        <div class="list-group list-group-flush">
            <a asp-controller="Home" asp-action="Index" class="list-group-item list-group-item-action bg-dark text-light">
                <i class="fas fa-home"></i> Trang chủ
            </a>
            <a asp-controller="QuanLy" asp-action="Index" class="list-group-item list-group-item-action bg-dark text-light">
                <i class="fas fa-users"></i> Quản lí khách hàng
            </a>
            <a asp-controller="HangHoas" asp-action="Index" class="list-group-item list-group-item-action bg-dark text-light">
                <i class="fas fa-box"></i> Quản lí hàng hóa
            </a>
            <a asp-controller="QuanLy" asp-action="NhanVienIndex" class="list-group-item list-group-item-action bg-dark text-light">
                <i class="fas fa-user-tie"></i> Quản lí nhân viên
            </a>
            <a asp-controller="Orders" asp-action="Index" class="list-group-item list-group-item-action bg-dark text-light">
                <i class="fas fa-receipt"></i> Quản lí đơn hàng
            </a>
            <a asp-controller="QuanLy" asp-action="Report" class="list-group-item list-group-item-action bg-dark text-light">
                <i class="fas fa-chart-line"></i> Báo cáo
            </a>
            <a asp-controller="YeuThiches" asp-action="Index" class="list-group-item list-group-item-action bg-dark text-light">
                <i class="fas fa-heart"></i> Yêu thích
            </a>
            <a asp-controller="QuanLy" asp-action="Setting" class="list-group-item list-group-item-action bg-dark text-light">
                <i class="fas fa-cogs"></i> Cài đặt
            </a>
        </div>
        <div class="last-login">
            <span class="last-login-text">Đăng nhập lần cuối:@User.FindFirst("LastLoginTime")?.Value</span>
        </div>

    </div>
    <!-- Nội dung chính -->
    <div class="content">
        @RenderBody()
        <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />
        <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    </div>
    @RenderSection("Scripts", required: false)
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
</body>
</html>
